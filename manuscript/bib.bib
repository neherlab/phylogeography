	author = {Vaughan, Timothy G. and Kühnert, Denise and Popinga, Alex and Welch, David and Drummond, Alexei J.},
	month = aug,
	year = {2014},
	pages = {2272--2279},
	file = {Full Text PDF:/home/richard/Zotero/storage/C88AKJHS/Vaughan et al. - 2014 - Efficient Bayesian inference under the structured .pdf:application/pdf;Snapshot:/home/richard/Zotero/storage/4YQVMWYE/2748160.html:text/html},
