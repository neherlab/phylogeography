	shorttitle = {Sampling bias and model choice in continuous phylogeography},
	url = {https://journals.plos.org/ploscompbiol/article?id=10.1371/journal.pcbi.1008561},
	doi = {10.1371/journal.pcbi.1008561},
	abstract = {Phylogeographic inference allows reconstruction of past geographical spread of pathogens or living organisms by integrating genetic and geographic data. A popular model in continuous phylogeography—with location data provided in the form of latitude and longitude coordinates—describes spread as a Brownian motion (Brownian Motion Phylogeography, BMP) in continuous space and time, akin to similar models of continuous trait evolution. Here, we show that reconstructions using this model can be strongly affected by sampling biases, such as the lack of sampling from certain areas. As an attempt to reduce the effects of sampling bias on BMP, we consider the addition of sequence-free samples from under-sampled areas. While this approach alleviates the effects of sampling bias, in most scenarios this will not be a viable option due to the need for prior knowledge of an outbreak’s spatial distribution. We therefore consider an alternative model, the spatial Λ-Fleming-Viot process (ΛFV), which has recently gained popularity in population genetics. Despite the ΛFV’s robustness to sampling biases, we find that the different assumptions of the ΛFV and BMP models result in different applicabilities, with the ΛFV being more appropriate for scenarios of endemic spread, and BMP being more appropriate for recent outbreaks or colonizations.},
	language = {en},
	number = {1},
	urldate = {2023-04-23},
	journal = {PLOS Computational Biology},
	author = {Kalkauskas, Antanas and Perron, Umberto and Sun, Yuxuan and Goldman, Nick and Baele, Guy and Guindon, Stephane and Maio, Nicola De},
	month = jan,
	year = {2021},
	note = {Publisher: Public Library of Science},
	keywords = {Phylogenetic analysis, Phylogenetics, Phylogeography, Brownian motion, Latitude, Longitude, West Nile virus, Yellow fever virus},
	pages = {e1008561},
	file = {Full Text PDF:/home/richard/Zotero/storage/VDSQ2Y9V/Kalkauskas et al. - 2021 - Sampling bias and model choice in continuous phylo.pdf:application/pdf},
}



@article{dellicour_using_2019,
